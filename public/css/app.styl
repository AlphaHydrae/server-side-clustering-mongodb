body
  margin 0
  padding 0
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
  color #00B7FF

map
  position absolute
  width 100%
  height 100%
  .angular-leaflet-map
    position absolute
    width 100%
    height 100%

.cluster-icon
  width 100%
  height 100%
  background-color red
  color white
  text-align center
  line-height 40px

html, body
  height 100%

.map-column
  padding 0
  height 100%

.panel-body &:last-child
  margin-bottom 0

.source-links
  margin-top 1em

table#requests
  tbody
    tr.data
      td
        padding-bottom 0.2em
    tr.details
      td
        padding-top 0
        border-top 0
